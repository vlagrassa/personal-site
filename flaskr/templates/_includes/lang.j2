{%- macro set_lang(l) -%}
lang="{{l}}" data-lang="{{l}}"{% if lang and lang != l %} class="hide"{% endif %}
{%- endmacro -%}


{% macro render_lang_selector(langs) %}
<h4>
  <span {{ set_lang("en") }}>Language</span>
  <span {{ set_lang("ja") }}>言語</span>
  <span {{ set_lang("tj") }}>Tʒoga</span>
</h4>
{% for l in langs %}
<button id="button-{{l.code}}" class="lang-button" lang="{{l.code}}" onclick="set_language('{{l.code}}')">
  <div>{{l.name}}</div>
</button>
{% endfor %}
{% endmacro %}


{% macro render_searchbar(id=none, oninput=none, label=none, class='', fixed_inputs=none) %}
  <div class="searchbar-container {{class}}">
    <input
      id="{{id}}"
      type="text"
      title=""
      required
      {% if oninput %}oninput="{{ oninput }}(this.value)"{% endif %}
      data-bs-toggle="dropdown"
    >
    {% if label is mapping %}
      <label for="{{id}}">
      {% for l, t in label.items() %}
        <span {{ set_lang(l) }}>{{ t }}</span>
      {% endfor %}
      </label>
    {% elif label %}
      <label for="{{id}}">{{label}}</label>
    {% endif %}

  </div>
{% endmacro %}
